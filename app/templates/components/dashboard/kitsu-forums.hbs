<h6 class="panel-heading">Industry News</h6>
{{#if getTopics.isRunning}}
  <div class="text-xs-center w-100">
    {{loading-spinner size="large"}}
  </div>
{{else if topics}}
  <ul class="kitsu-forums">
    {{#each topics as |topic|}}
      <li>
        <a href={{topic.href}} target="_blank">
          {{topic.title}}
        </a>
      </li>
    {{/each}}
  </ul>
{{else}}
  <div class="text-xs-center m-t-1 m-b-1">
    {{t "errors.load"}}
  </div>
{{/if}}
